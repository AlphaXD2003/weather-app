<!doctype html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../../public/css/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <!-- navbar start -->
  {{>menu}}
  <!-- navbar end -->

  <!-- form  -->
  <form action="" method="post">
    <section class="text-gray-600 body-font relative">
      <div class="container px-5 py-24  flex">
        <div
          class="lg:w-1/3 md:w-1/2 bg-white rounded-lg p-8 flex flex-col ml-auto pl-4 mr-auto w-full mt-10 md:mt-0 relative z-10 shadow-md">
          <h2 class="text-gray-900 text-lg mb-1 font-medium title-font">Sign in</h2>
          <p class="leading-relaxed mb-5 text-gray-600">Sign in required for access</p>
          <div class="relative mb-4">
            <label for="email" class="leading-7 text-sm text-gray-600">Email</label>
            <input type="email" id="email" name="email"
              class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
          <div class="relative mb-4">
            <label for="password" class="leading-7 text-sm text-gray-600">Password</label>
            <input type="password" id="password" name="password"
              class="w-full bg-white rounded border border-gray-300 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
          </div>
          <button
            class="text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg">Sign
            in</button>
          <p class="text-xs text-gray-500 mt-3">Don't have account ? <a class="mr-5 hover:text-gray-900" href=""
              target="_blank" style="color: blue;">Sign Up</a></p>
              {{#if message}}
      <p class="text-gray-600" style="text-align: center; margin-bottom : 2px;margin-top : 12px">Invalid Details</p>
      {{/if}}
        </div>
        
      </div>
      
    </section>
  </form>

  <!-- Stat start -->
  {{>stat}}

  <!-- stat end -->
  <!-- footer start  -->
  {{>footer}}
  <!-- footer end  -->
</body>

</html>